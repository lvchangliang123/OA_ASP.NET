@{
    ViewBag.Title = "创建博客";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="MarkDown/css/editormd.min.css" />
</head>
<body>
    <div class="card-header d-md-inline-flex col col-md-12">
        <span style="height:30px;display:line-block;vertical-align:middle;line-height:30px">文章标题:</span>
        <input class="input-large" type="text" placeholder="Add title for your article" style="margin-left:10px;width:90%"/>
    </div>
    <div id="editor" class="editormd-dialog-container card-body" style="height:800px">
        <!-- Tips: Editor.md can auto append a `<textarea>` tag -->
        <textarea>### Hello Editor.md !</textarea>
    </div>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="MarkDown/src/editormd.js"></script>
    <script type="text/javascript">
        $(function() {
            var editor = editormd("editor", {
                width: "100%",
                height: 800,
                syncScrolling : "single",
                // markdown: "xxxx",     // dynamic set Markdown text
                path: "MarkDown/lib/"  // Autoload modules mode, codemirror, marked... dependents libs path
            });
        });
    </script>
</body>



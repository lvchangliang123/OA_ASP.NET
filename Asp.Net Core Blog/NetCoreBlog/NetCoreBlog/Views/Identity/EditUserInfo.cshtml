@model EditUserInfoViewModel
@{
    ViewBag.Title = "修改用户信息";
}

@{
    Layout = "";
}
<!DOCTYPE html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NetCoreBlog.styles.css" asp-append-version="true" />
</head>
<body>

    <div class="row">
        <div class="col-6 offset-3 shadow-sm p-3 mb-6 bg-light">

            <div style="text-align:center">
                <span>
                    <img src="@Model.OldAvatar" style="border-radius:50px" width="100" height="100">
                </span>
            </div>

            <form method="post" style="margin-top:60px" class="form-control" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="NewUserName" class="col-md-3 col-form-label"></label>
                    <div class="col-md-12">
                        <input asp-for="NewUserName" class="form-control" />
                        <span asp-validation-for="NewUserName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="NewEmail" class="col-md-3 col-form-label"></label>
                    <div class="col-md-12">
                        <input asp-for="NewEmail" class="form-control" />
                        <span asp-validation-for="NewEmail" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="NewBirthDay" class="col-md-3 col-form-label"></label>
                    <div class="col-md-12">
                        <input asp-for="NewBirthDay" type="date" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="NewAvatar" class="col-md-3 col-form-label"></label>
                    <div class="col-md-12">
                        <div>
                            <input asp-for="NewAvatar" type="file" name="NewAvatar" id="NewAvatar" class="form-control" />
                            @*<label class="custom-file-label">请选择图片...</label>*@
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="col-md-3 col-form-label"></label>
                    <div class="col-md-12">
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group" style="text-align:center">
                    <button type="submit" class="btn btn-primary" style="margin:10px 0 0 0;width:100px">提交修改</button>
                </div>

            </form>
        </div>
    </div>

</body>

@{
    ViewBag.Title = "Index";
}


<!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Login</title>
        <link rel="stylesheet" type="text/css" href="~/Scripts/CssScripts/Login.css" />
    </head>
    <body>
        <div id="login">
            <h1>Login</h1>
            <form method="post">
                <input type="text" required="required" placeholder="用户名" name="u" />
                <input type="password" required="required" placeholder="密码" name="p" />
                <input type="text" required="required" placeholder="验证码" name="c" />
                <img id="img" src="/UserLogin/ShowVCode" onclick="this.src+='?new Date()'" style="float: left;height:24px;"/>
                <button class="but" type="submit">登录</button>
            </form>
        </div>
    </body>
    </html>





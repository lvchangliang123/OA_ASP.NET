@using WebApplication1.Extensions
@model IEnumerable<WebApplication1.Models.Student>

@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>学生页面详情</title>
</head>
<body>
    <div class="card-deck">
        @foreach (var student in Model)
        {
            var photoPath = "~/UploadImages/" + (student.PhotoPath ?? "noimage.png");
            <div class="card m-3">
                <div class="card-header">
                    <h3 class="card-title">@student.Name</h3>
                </div>
                <img class="card-img-top" src="@photoPath" asp-append-version="true" />

                <div class="card-body text-center">
                    <h5 class="card-title">主修科目：@student.Major.GetDisplayName()</h5>
                </div>

                <div class="card-footer text-center">
                    <a asp-controller="Student" asp-action="Details" asp-route-id="@student.EncryptedId" class="btn btn-info m-1">查看</a>
                    <a asp-controller="Student" asp-action="Edit" asp-route-id="@student.EncryptedId" class="btn btn-primary m-1">编辑</a>
                    <a href="#" class="btn btn-danger m-1">删除</a>
                </div>
            </div>
        }
    </div>

</body>
</html>
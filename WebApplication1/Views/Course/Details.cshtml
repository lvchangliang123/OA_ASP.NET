@model Course
@{
    ViewBag.Title = "课程详细信息";
}

<div class="row justify-content-center m-3">
    <div class="col-sm-3">
        <div class="card bg-light mb-3" style="max-width:18rem;">
            <div class="card-header">
                <h1>@Model.Title 详情</h1>
            </div>
            <div class="card-body text-danger">
                <h5 class="card-title">
                    @Html.DisplayNameFor(c=>c.Title) : @Model.Title
                </h5>
                <h5 class="card-title">
                    @Html.DisplayNameFor(c=>c.CourseID) : @Model.CourseID
                </h5>
                  <h5 class="card-title">
                    @Html.DisplayNameFor(c=>c.DepartmentID) : @Model.DepartmentID
                </h5>
                  <h5 class="card-title">
                    @Html.DisplayNameFor(c=>c.Credits) : @Model.Credits
                </h5>
            </div>
            <div class="card-footer text-danger">
                <a asp-action="Index" class="btn btn-info">返回</a>
                <a asp-action="Edit" asp-route-courseId="@Model.CourseID" class="btn btn-primary">编辑</a>
            </div>
        </div>
    </div>
</div>
